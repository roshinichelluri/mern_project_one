<% layout("layouts/boilerplate.ejs") %>
<div class="row mt-3">
    <h2 class="col-6 offset-3 ">Login</h2>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" required name="username" class="form-control">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Passsword</label>
                <input type="password" id="password" required name="password" class="form-control">
            </div>
            <button class="btn btn-success">Login</button>
        </form>
    </div>
</div>